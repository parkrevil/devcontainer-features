{
  "name": "Bunner",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
  "runArgs": [
    "--name=bunner-devcontainer",
    "--label=com.docker.compose.project=bunner",
    "--label=com.docker.compose.service=bunner"
  ],
  "features": {
    "ghcr.io/devcontainers/features/common-utils": {},
    "./src/bun": {
      "version": "1.1.0"
    },
    "./src/angular-bun": {
      "version": "^18"
    }
  },
  "remoteUser": "vscode",
  "mounts": [
    "source=${localEnv:HOME}/.gitconfig,target=/home/vscode/.gitconfig,type=bind"
  ]
}