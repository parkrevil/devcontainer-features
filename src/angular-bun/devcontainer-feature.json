{
  "id": "angular-bun",
  "name": "Angular Bun",
  "version": "1.0.2",
  "description": "Installs Angular Framework using package manager Bun",
  "init": true,
  "options": {
    "version": {
      "type": "string",
      "description": "Specify Angular CLI version to install",
      "default": "^20"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "Angular.ng-template"
      ]
    }
  },
  "containerEnv": {
    "PATH": "/usr/local/bin:${PATH}"
  },
  "installsAfter": [
    "ghcr.io/parkrevil/devcontainer-features/bun"
  ]
}
