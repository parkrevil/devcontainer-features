{
  "id": "bun",
  "name": "Bun",
  "version": "1.1.3",
  "description": "Installs Bun language",
  "init": true,
  "options": {
    "version": {
      "type": "string",
      "description": "Specify Bun version to install",
      "default": "1.2.20"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "oven.bun-vscode"
      ],
      "settings": {
        "bun.runtime": "/home/${remoteUser}/.bun/bin"
      }
    }
  },
  "containerEnv": {
    "BUN_INSTALL": "/home/${remoteUser}/.bun",
    "PATH": "/home/${remoteUser}/.bun/bin:$PATH"
  },
  "installsAfter": [
    "ghcr.io/devcontainers/features/common-utils"
  ]
}